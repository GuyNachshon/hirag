# Frontend Production Environment Configuration Template
# Copy this file to .env.production and modify as needed

# API Base URL - leave empty to use proxy through nginx (recommended for Docker)
# When empty, the frontend will use relative URLs which nginx will proxy to the backend
VITE_API_URL=

# Alternative: Set explicit API URL if not using nginx proxy
# VITE_API_URL=http://localhost:8080

# Application Title
VITE_APP_TITLE=RAG System

# Feature Flags
VITE_ENABLE_FILE_SEARCH=true
VITE_ENABLE_CHAT=true
VITE_ENABLE_TRANSCRIPTION=false
VITE_ENABLE_RAG_TOGGLE=true

# UI Configuration
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf,text/plain

# Session Configuration
VITE_SESSION_TIMEOUT_MINUTES=30
VITE_AUTO_SAVE_INTERVAL_SECONDS=60

# Debug Mode
VITE_DEBUG_MODE=false