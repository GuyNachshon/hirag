# Platform-independent vLLM Server with embedded models
FROM pytorch/pytorch:2.1.0-cuda12.1-cudnn8-devel

# Set timezone to avoid interactive prompts
ENV DEBIAN_FRONTEND=noninteractive
ENV TZ=UTC

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Install vLLM and dependencies (pinned versions for stability)
RUN pip install --no-cache-dir \
    vllm==0.2.7 \
    transformers==4.36.0 \
    accelerate \
    safetensors \
    fastapi \
    uvicorn[standard] \
    requests \
    numpy \
    sentence-transformers

# Environment variables (offline mode disabled for downloads)
ENV HF_HOME=/root/.cache/huggingface
ENV TRANSFORMERS_CACHE=/root/.cache/huggingface
ENV CUDA_VISIBLE_DEVICES=0
ENV VLLM_USE_TRITON=0
ENV CUDA_LAUNCH_BLOCKING=0
ENV TORCH_CUDA_ARCH_LIST="8.0;8.6;8.9;9.0"
ENV DISABLE_CUSTOM_ALL_REDUCE=1

# Create cache directory
RUN mkdir -p /root/.cache/huggingface

# Copy pre-download script and startup script
COPY source-code/download_models.py /app/download_models.py
COPY source-code/start_vllm.sh /app/start_vllm.sh

# Make scripts executable and download models
RUN chmod +x /app/download_models.py /app/start_vllm.sh
RUN python /app/download_models.py

# Enable offline mode after downloads
ENV HF_HUB_OFFLINE=1
ENV TRANSFORMERS_OFFLINE=1

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Expose port
EXPOSE 8000

# Start vLLM
CMD ["/app/start_vllm.sh"]